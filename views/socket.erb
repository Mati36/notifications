<html>
  <head>
      <meta charset = "utf-8">
      <title>Web socket</title>
      <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">
      <link rel="stylesheet" href="/css/layoutStyle.css">
      <% if request.path_info != '/signUp'%>
        <script type="text/javascript" src="js/socket.js"></script>
      <%end%>
      <% if request.path_info == '/save_document'%>
        <script type="text/javascript" src="js/validationDocument.js"></script>
      <%end%>
  </head>
  <body>
    <%if @current_user%>
      
      <div class="w3-display-bottomright notifContainer">
        <div class="w3-container w3-tiny ">
            <form id="form" action="/notifications" method="GET">
              <button type="submit" id="btn_notyf" class="w3-button w3-small w3-circle w3-padding-16"  > 
                <span name="span"  id="notification" class="w3-badge w3-red w3-small w3-circle w3-margin-left ">
                    <%=get_notification_count(@current_user.id)%>
                </span>              
                <i class="w3-xlarge w3-circle w3-margin-right"> 
                    <img  src=<%=@icons+"bell.png"%> >
                </i>
              </button>    
            </form>
        </div>
      </div>
<%end%>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
</body>
</html>